<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieMix" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1F1F21</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darkGray</item>
        <item name="bottomNavigationStyle">@style/CustomBottomNavigationView</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="CustomBottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/bottomNavBackground</item>
        <item name="itemIconTint">@color/bottom_nav_view_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_view_item_color</item>
    </style>
</resources>