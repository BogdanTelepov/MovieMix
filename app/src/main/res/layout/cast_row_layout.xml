<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#191926"
    android:layout_margin="8dp"
    android:layout_width="80dp"
    android:layout_height="120dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/castItem_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp"
        android:scaleType="centerCrop"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/castItem_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="Robert Downey Jr."
        app:layout_constraintTop_toBottomOf="@id/castItem_image"
        app:layout_constraintStart_toStartOf="@id/castItem_image"
        app:layout_constraintEnd_toEndOf="@id/castItem_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#D8D8D8"
        android:textSize="12sp"
        android:fontFamily="@font/roboto_condensed_bold"/>


</androidx.constraintlayout.widget.ConstraintLayout>