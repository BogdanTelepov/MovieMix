<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    tools:context=".ui.activities.SplashActivity">


    <ImageView
        android:id="@+id/iv_splash_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_splash_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="MovieMix"
        android:textColor="@color/white"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/iv_splash_icon"
        app:layout_constraintStart_toStartOf="@id/iv_splash_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_splash_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>